<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cocoben.reco">
    <!-- Camera permission -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- Internet permission -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Write permission -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_icon_purple"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_icon_purple"
        android:supportsRtl="true"
        android:theme="@style/Theme.Reco"
        android:usesCleartextTraffic="true">

        <meta-data
            android:name="push_kit_auto_init_enabled"
            android:value="true" />
        <meta-data
            android:name="com.huawei.hms.ml.DEPENDENCY"
            android:value="ocr" />

        <service
            android:name=".MessageService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.huawei.push.action.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".IntroActivity"
            android:exported="true"
            android:theme="@style/IntroScreenTheme" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Reco" />
        <activity
            android:name=".SplashActivity"
            android:launchMode="singleTask"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>